<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_add_picture"
        tools:context=".AddPicture">

    <Button
            android:text="Take a new photo"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:id="@+id/newPhoto" app:layout_constraintStart_toEndOf="@+id/AddExistingButton"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="10dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="10dp"
    />
    <Button
            android:text="Add Existing Photo"
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:id="@+id/AddExistingButton"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/newPhoto" android:layout_marginEnd="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@+id/addPicLinear" android:layout_marginBottom="20dp"
            app:layout_constraintVertical_bias="0.046"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:id="@+id/addPicLinear" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/newPhoto" android:layout_marginBottom="20dp"
    >
    </LinearLayout>
</android.support.constraint.ConstraintLayout>