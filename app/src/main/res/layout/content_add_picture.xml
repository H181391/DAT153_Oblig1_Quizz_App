<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_add_picture"
        tools:context=".AddPicture">

    <Button
            android:text="Take a new photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="275dp"
            android:id="@+id/newPhoto" app:layout_constraintStart_toEndOf="@+id/AddExistingButton"
            android:layout_marginStart="64dp"/>
    <Button
            android:text="Add Existing Photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="275dp"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/AddExistingButton"/>
</android.support.constraint.ConstraintLayout>